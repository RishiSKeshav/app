<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/email_authentication_toolbar"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/color_primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ToolBarStyle"
        >

        <TextView
            android:id="@+id/tv_ld_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter activation code"
            android:textSize="18dp"
            android:textColor="#fff"
            />
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff">

        <TextView
            android:id="@+id/text_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textColor="@color/color_primary"
            android:text=""
            />

       <LinearLayout
           android:id="@+id/text_code2"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_margin="20dp"
           android:padding="5dp"
           android:background="@drawable/border"
           android:layout_below="@+id/text_code"
           android:orientation="horizontal"
           >

           <TextView

               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Activation Code  | "/>

           <EditText
               android:id="@+id/code"
               android:inputType="number"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />

       </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_code2"
            android:text="No Code?"
            android:layout_margin="20dp"
            android:textColor="@color/color_primary"/>



    </RelativeLayout>


</LinearLayout>
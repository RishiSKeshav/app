<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_to_personal_album"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/ic_launcher"
            android:layout_margin="5dp"
            android:layout_alignParentLeft="true"
            android:scaleType="centerCrop"
            />
        <TextView
            android:id="@+id/name_to_personal_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_toRightOf="@id/image_to_personal_album"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:textColor="#000"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/count_to_personal_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_to_personal_album"
            android:layout_toRightOf="@+id/image_to_personal_album"
            android:text=""
            android:layout_marginLeft="15dp"
            android:layout_marginTop="7dp"/>

        <View
            android:id="@+id/to_personal_album_selected_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#8FFF"
            android:visibility="invisible">
        </View>

        <ImageView
            android:id="@+id/to_personal_album_media_image_check"
            android:orientation="vertical"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:src="@drawable/selected_image"/>


    </RelativeLayout>
</android.support.v7.widget.CardView>
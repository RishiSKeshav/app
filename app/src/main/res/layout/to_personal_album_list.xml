<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_to_personal_album"
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            />
        <TextView
            android:id="@+id/name_to_personal_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="dfdf"
            android:layout_below="@+id/image_to_personal_album"
            android:textColor="#000"
            android:textSize="16sp"/>

        <View
            android:id="@+id/to_personal_album_selected_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#8FFF"
            android:visibility="invisible">
        </View>

        <ImageView
            android:id="@+id/to_personal_album_media_image_check"
            android:orientation="vertical"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@android:drawable/ic_input_add"/>


    </RelativeLayout>
</android.support.v7.widget.CardView>
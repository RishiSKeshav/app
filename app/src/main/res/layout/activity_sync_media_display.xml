<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<!--
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
-->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/sync_images_toolbar"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/color_primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ToolBarStyle"
        >

        <TextView
            android:id="@+id/tv_ld_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Photos"
            android:textSize="18dp"
            android:textColor="#fff"
            />
    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sync_images_toolbar"
        android:id="@+id/text_unsync_image_list"
        android:text="fff"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:textSize="14sp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/unsync_media_recycler_view"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/text_unsync_image_list"
        tools:context=".MainActivity$PlaceholderFragment"/>



    <TextView
        android:id="@+id/text_sync_image_lsit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/unsync_media_recycler_view"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:text="fff"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/sync_media_recycler_view"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/text_sync_image_lsit"
        tools:context=".MainActivity$PlaceholderFragment"/>


    <TextView
        android:id="@+id/text_camera_image_lsit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sync_media_recycler_view"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:text="fff"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/camera_media_recycler_view"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/text_camera_image_lsit"
        tools:context=".MainActivity$PlaceholderFragment"/>






</RelativeLayout>

<!--</ScrollView>-->

    <android.support.design.widget.NavigationView
        android:id="@+id/nvView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white"
        app:menu="@menu/drawer_view" />


</android.support.v4.widget.DrawerLayout>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
          />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/thumbnail"
            android:maxLines="3"
            android:padding="8dp"
            android:layout_marginTop="10dp"
            android:text="Amit Rajula"
            android:textColor="#222"
            android:textStyle="bold"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/members"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/thumbnail"
            android:layout_toRightOf="@+id/name"
            android:layout_marginLeft="30dp"
            android:src="@drawable/ic_person_black_48dp"/>

        <TextView
            android:id="@+id/members_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/thumbnail"
            android:layout_toRightOf="@+id/members"
            android:maxLines="3"
            android:layout_marginTop="15dp"
            android:padding="8dp"
            android:text="10"
            android:textColor="#666"
            android:textSize="14dp" />

        <ImageView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/thumbnail"
        android:layout_toRightOf="@+id/members_data"
        android:src="@drawable/ic_alarm_on_black_48dp"/>

        <TextView
            android:id="@+id/date_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/thumbnail"
            android:layout_toRightOf="@+id/date"
            android:maxLines="3"
            android:layout_marginTop="15dp"
            android:padding="8dp"
            android:text="10"
            android:textColor="#666"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/thumbnail"
            android:layout_toRightOf="@+id/date_data"
            android:src="@drawable/ic_photo_black_48dp"/>

        <TextView
            android:id="@+id/image_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/thumbnail"
            android:layout_toRightOf="@+id/image"
            android:maxLines="3"
            android:layout_marginTop="15dp"
            android:padding="8dp"
            android:text="10"
            android:textColor="#666"
            android:textSize="14dp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>